{
    "name": "sccdmaomao-personal-website",
    "version": "1.0.0",
    "description": "SPA developed in React & Typescript",
    "main": "index.tsx",
    "license": "MIT",
    "author": "Guohao Yan",
    "private": true,
    "engines": {
        "node": ">=9.2.0"
    },
    "scripts": {
        "dev": "webpack-dev-server --mode development",
        "compile": "webpack",
        "test": "jest --passWithNoTests",
        "build:prod": "rm -rf ./dist & NODE_ENV=production PLATFORM=web webpack -p --progress --display-error-details --color",
        "build:prod:quiet": "NODE_ENV=production PLATFORM=web webpack -p --display-error-details --color",
        "build:stats": "mkdir -p ./stats ; ./node_modules/.bin/webpack --config webpack.config.stats.js --json > stats/stats.json ; ./node_modules/.bin/analyze-bundle --bundle stats/bundle.js --stats stats/stats.json --dir ./stats",
        "optimize-svg": "find ./src/components/Icons -name \"*.svg\" -exec svgo {} \\;",
        "reactify-svg": "find ./src/components/Icons -name \"*.svg\" -execdir svgtoreact dir \\;",
        "svg": "yarn optimize-svg && yarn reactify-svg",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx  --fix",
        "deploy": "yarn build:prod:quiet && ./node_modules/.bin/git-directory-deploy --directory dist"
    },
    "lint-staged": {
        "*.{ts,tsx,css}": [
            "yarn lint",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "lodash.get": "^4.4.2",
        "lodash.isempty": "^4.4.0",
        "lodash.replace": "^4.1.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "webpack-stats-plugin": "^0.2.1"
    },
    "devDependencies": {
        "@babel/plugin-transform-typescript": "^7.13.0",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.13.0",
        "@tsconfig/recommended": "^1.0.1",
        "@types/classnames": "^2.2.11",
        "@types/node": "^14.14.31",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^5.9.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^22.0.3",
        "babel-loader": "^7.1.2",
        "babel-preset-react": "^6.24.1",
        "css-loader": "^0.28.7",
        "electrode-bundle-analyzer": "^1.0.0",
        "eslint": "^7.20.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^3.3.1",
        "file-loader": "^1.1.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.9.0",
        "less-loader": "^4.0.5",
        "lint-staged": "^7.0.2",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.8.2",
        "raf": "^3.4.0",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.20.1",
        "stylelint": "^9.2.0",
        "stylelint-config-standard": "^18.0.0",
        "svg-to-react-cli": "^1.5.0",
        "svgo": "^1.0.3",
        "ts-jest": "^24.0.2",
        "ts-loader": "^4.1.0",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.6.0",
        "tslint-plugin-prettier": "^1.3.0",
        "tslint-react": "^3.2.0",
        "typescript": "^4.5.4",
        "webpack": "^4.4.1",
        "webpack-cli": "^3.3.6",
        "webpack-dev-server": "^3.1.1",
        "yarn": "^1.22.10"
    }
}
